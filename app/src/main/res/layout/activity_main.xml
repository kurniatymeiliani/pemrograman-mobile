<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#33ccff"
    android:orientation="vertical"
    tools:context="com.example.ngbserdos.MainActivity">

    <TextView
        android:id="@+id/teks1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Selamat Datang di Aplikasi Penghitung NGB Serdos"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25sp"
        android:typeface="serif"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />
    <Button
        android:id="@+id/btn_hitung_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:text="@string/hitung_activity"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/teks1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-15dp"/>
    <Button
        android:id="@+id/btn_about_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="vertical"
        android:text="@string/about"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/teks1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-15dp"/>
</android.support.constraint.ConstraintLayout>